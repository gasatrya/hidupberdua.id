<header class="p-5 bg-gray-50">
    <div class="max-w-7xl mx-auto w-full flex md:flex-row flex-col justify-between items-center">

        <section class="flex items-center md:flex-row flex-col md:mb-0 mb-5">
            <h1 class="text-2xl font-extrabold pb-1 mr-3 tracking-tight">
                <a href="/">{{ site.title }}</a>
            </h1>
            <p class="text-base font-serif italic">{{ site.tagline }}</p>
        </section>

        <nav class="text-sm flex gap-x-3">
            {%- for entry in collections.all | eleventyNavigation %}
            <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            {%- endfor %}
        </nav>

    </div>
</header>
